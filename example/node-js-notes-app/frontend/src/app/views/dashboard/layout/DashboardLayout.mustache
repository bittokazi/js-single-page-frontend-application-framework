{{#authenticated}}
<div class="wrapper">
  <div class="sidebar" data-color="white" data-active-color="danger">
    {{#user}}
    <div class="logo">
      <a class="simple-text logo-mini">
        <div class="logo-image-small">
          <img src="{{ image }}" />
        </div>
        <!-- <p>CT</p> -->
      </a>
      <a href="https://www.creative-tim.com" class="simple-text logo-normal">
        {{ username }}
        <!-- <div class="logo-image-big">
            <img src="/assets/dashboard/img/logo-big.png">
          </div> -->
      </a>
    </div>
    {{/user}}
    {{#sideBarComponent}}{{/sideBarComponent}}
  </div>
  <div class="main-panel" style="min-height: 100%">
    <!-- Navbar -->
    <nav
      class="navbar navbar-expand-lg navbar-absolute fixed-top navbar-transparent"
    >
      <div class="container-fluid">
        <div class="navbar-wrapper">
          <div class="navbar-toggle">
            <button type="button" class="navbar-toggler">
              <span class="navbar-toggler-bar bar1"></span>
              <span class="navbar-toggler-bar bar2"></span>
              <span class="navbar-toggler-bar bar3"></span>
            </button>
          </div>
          <a class="navbar-brand" href="javascript:;"
            >Simple JavaScript SPA Framework</a
          >
        </div>
        <button class="navbar-toggler" type="button" onclick="_self.logout()">
          <i class="nc-icon nc-button-power"></i>
        </button>
        <div
          class="collapse navbar-collapse justify-content-end"
          id="navigation"
        >
          <ul class="navbar-nav">
            <li class="nav-item">
              <a
                class="nav-link btn-rotate"
                onclick="_self.logout()"
                style="cursor: pointer"
              >
                <i class="nc-icon nc-button-power"></i>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <!-- End Navbar -->
    <div class="content">
      {{#noCard}}
      {{> contentView}}
      {{/noCard}}
      {{^noCard}}
      <div class="row">
        <div class="col-md-12">
          <div class="card">
            <div class="card-header">
              <h5 class="title">
                {{#currentMenu}}
                {{ title }}
                {{/currentMenu}}
              </h5>
            </div>
            <div class="card-body">
              {{> contentView}}
            </div>
          </div>
        </div>
      </div>
      {{/noCard}}
    </div>
    <footer class="footer footer-black footer-white">
      <div class="container-fluid">
        <div class="row">
          <nav class="footer-nav">
            <ul></ul>
          </nav>
          <div class="credits ml-auto">
            <span class="copyright">
              Made with <i class="fa fa-heart heart"></i> by Bitto Kazi Â©
              {{ footerYear }}
            </span>
          </div>
        </div>
      </div>
    </footer>
  </div>
</div>
{{/authenticated}}
{{^authenticated}}
<h3
  style="
    top: 50%;
    position: absolute;
    left: 50%;
    margin-left: -210px;
    margin-top: -10px;
  "
>
  <div class="spinner-grow text-danger" role="status">
    <span class="sr-only">Loading...</span>
  </div>
  Checking Authentication...
</h3>
{{/authenticated}}
